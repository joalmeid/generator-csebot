    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Bot",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/app.js"
        },
        {
            "name": "Run Mocha Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "runtimeExecutable": null,
            "console": "internalConsole",
            "args": [
                "./test/index.js",
                "--debug-brk  ",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true
        }
    ]
}