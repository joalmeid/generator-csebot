{
   "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {
      "containerName": {
         "type": "string"
      },
      "containerURI": {
         "type": "string"
      },
      "imageRegistryLoginServer": {
         "type": "string",
         "defaultValue": ""
      },
      "imageUsername": {
         "type": "string",
         "defaultValue": ""
      },
      "imagePassword": {
         "type": "string",
         "defaultValue": ""
      },
      "osType": {
         "allowedValues": [
            "Linux",
            "Windows"
         ],
         "type": "string",
         "defaultValue": "Linux"
      },
      "numberCores": {
         "type": "string",
         "defaultValue": "1"
      },
      "memory": {
         "type": "string",
         "defaultValue": "1.5"
      },
      "ports": {
         "defaultValue": "80",
         "type": "string"
      }
   },
   "variables": {
      "containerName": "[concat(parameters('containerName'),'-',uniquestring(parameters('containerName')))]",
      "numberCores": "[int(parameters('numberCores'))]",
      "memory": "[float(parameters('memory'))]",
      "port": "[parameters('ports')]"
   },
   "resources": [{
      "name": "[variables('containerName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2017-08-01-preview",
      "location": "[resourceGroup().location]",
      "properties": {
         "containers": [{
            "name": "[variables('containerName')]",
            "properties": {
               "image": "[parameters('containerURI')]",
               "ports": [{
                  "port": "[variables('port')]"
               }],
               "environmentVariables": [{
                  "name": "ASPNETCORE_URLS",
                  "value": "[concat('http://*:', variables('port'))]"
               }],
               "resources": {
                  "requests": {
                     "cpu": "[variables('numberCores')]",
                     "memoryInGb": "[variables('memory')]"
                  }
               }
            }
         }],
         "osType": "[parameters('osType')]",
         "ipAddress": {
            "type": "Public",
            "ports": [{
               "protocol": "tcp",
               "port": "[variables('port')]"
            }]
         },
         "imageRegistryCredentials": [{
            "server": "[parameters('imageRegistryLoginServer')]",
            "username": "[parameters('imageUsername')]",
            "password": "[parameters('imagePassword')]"
         }]
      }
   }],
   "outputs": {
      "containerIPv4Address": {
         "type": "string",
         "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', variables('containerName'))).ipAddress.ip]"
      }
   }
}